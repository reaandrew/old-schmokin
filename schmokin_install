#! /bin/bash

mkdir -p ~/.schmokin

echo 'export PATH=~/.schmokin/:$PATH' >> ~/.profile

LATEST=$(curl -s https://github.com/reaandrew/schmokin/releases/latest | sed -rn 's/.*([0-9\.]{5,}).*/\1/p')

curl -sLo ~/.schmokin/schmokin "https://github.com/reaandrew/schmokin/releases/download/$LATEST/schmokin"

chmod +x ~/.schmokin/schmokin

echo "To start using now run: source ~/.profile"
