#! /bin/bash

mkdir -p ~/.schmokin

echo 'export PATH=~/.schmokin/:$PATH' >> ~/.profile

URL=$(curl -s https://github.com/reaandrew/schmokin/releases/latest | sed -rn 's/.*"([^"]+)".*/\1/p')

curl -sLo ~/.schmokin/schmokin $URL

chmod +x ~/.schmokin/schmokin

echo "To start using now run: source ~/.profile"
